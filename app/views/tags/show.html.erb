<div class="main tags-show">
  <div class="container-tags-show">
    <div class="tag-name">
      <%= link_to("# #{@tag.label}", "/tags/#{@tag.group_id}") %>
    </div>
    <% @posts.each do |post| %>
      <div class="tags-show-item">
          <div class="post-left-tag">
            <img src="<%= "/user_images/#{post.user.image_name}" %>">
            <div class="post-user-name-tag">
              <%= link_to(post.user.name, "/users/#{post.user.id}") %>
            </div>
          </div>
          <div class="post-right-tag">
            <%= link_to(simple_format(post.content), "/posts/#{post.id}") %>
          </div>
          <div class="post-likes-tag">
            <% if Like.find_by(user_id: @current_user.id, post_id: post.id) != nil %>
              <%= link_to likes_delete_path(:post_id => post.id, :tag_id => params[:id]) do %>
                <i class="fas fa-thumbs-up liked"></i>
              <% end %>
              <% likes = Like.where(post_id: post.id) %>
              <% num_of_likes = likes.length %>
              <% if num_of_likes != 0 %>
                <div class="num-of-likes-liked">
                  <%= num_of_likes %>
                </div>
              <% end %>
            <% else %>
              <%= link_to likes_create_path(:post_id => post.id, :tag_id => params[:id]) do %>
                <i class="fas fa-thumbs-up not-liked"></i>
              <% end %>
              <% likes = Like.where(post_id: post.id) %>
              <% num_of_likes = likes.length %>
              <% if num_of_likes != 0 %>
                <div class="num-of-likes-not-liked">
                  <%= num_of_likes %>
                </div>
              <% end %>
            <% end %>
          </div>
      </div>
    <% end %>
  </div>
</div>
