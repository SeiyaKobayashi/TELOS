<div class="users-new">
  <img src="telos_top.jpeg">
  <div class="container">
    <div class="form-heading-signup-login">Login</div>
    <div class="form users-form">
      <div class="form-body-login">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
        <%= form_tag("/login") do %>
          <p>Email Address: </p>
          <input name="email" value="<%= @email %>">
          <p>Password: </p>
          <input type="password" name = "password" value="<%= @password %>">
          <div class="button">
            <input type="submit" value="Login">
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
