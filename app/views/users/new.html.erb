<div class="users-new">
  <img src="telos_top.jpeg">
  <div class="container">
    <div class="form-heading-signup-login">Sign Up</div>
    <div class="form users-form">
      <div class="form-body-signup">
        <%= form_tag("/users/create") do%>
          <p>Username:</p>
          <input name="name" value="<%= @name %>" required>
          <p>Email Address:</p>
          <p class="signup-instructions">Please enter a valid email address.</p>
          <input name="email" value="<%= @email %>" required>
          <p>Password:</p>
          <p class="signup-instructions">
            8-30 characters, at least one lowercase,
            one uppercase, and one digit.
          </p>
          <input type="password" name="password" required>
          <p>Password (Confirm):</p>
          <p class="signup-instructions">Please re-enter password to confirm.</p>
          <input name="password_confirmation" type="password" required>
          <div class="button">
            <input type="submit" value="Sign Up">
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
