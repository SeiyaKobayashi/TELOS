<div class="main users-edit">
  <div class="container-users-edit">
    <div class="user-new-heading">Edit Your Profile</div>
    <div class="form users-form">
      <div class="form-body">
        <%= form_tag("/users/#{params[:id]}/update", {multipart: true}) do %>
          <% @user.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <p>Username<font color="red">*</font></p>
          <input name="name" value=<%= @user.name %>>
          <p>Profile Photo</p>
          <input name="image" type="file">
          <p>Email Address<font color="red">*</font></p>
          <input name="email" value=<%= @user.email %>>
          <p>Password<font color="red">*</font></p>
          <p class="signup-instructions">
            8-30 characters, at least one lowercase,
            one uppercase, and one digit. Can contain '-' and '_'.
          </p>
          <input name="password" type="password">
          <p>Password (Confirm)<font color="red">*</font></p>
          <input name="password_confirmation" type="password">
          <p>Short Bio</p>
          <textarea name="bio"><%= @user.short_bio %></textarea>
          <p><font color="red">* fields are required.</font></p>
          <div class="user-btn">
            <input type="submit" value="Save">
          </div>
        <% end %>
        <div class="delete-account">
          <%= link_to("Delete Account", "/users/#{params[:id]}/delete", method: :post,
                      data: {confirm: "Are you absolutely sure? This action cannot be undone.\
                      This will permanently delete the account '#{@current_user.name}' from TELOS."}) %>
        </div>
      </div>
    </div>
  </div>
</div>
