<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= "/user_images/#{@user.image_name}" %>">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @user.id == @current_user.id %>
        <%= link_to("Edit", "/users/#{@user.id}/edit") %><br>
        <%= link_to("Back to Your Posts", "/users/#{@user.id}") %>
      <% end %>
    </div>
    <% @liked_posts.reverse.each do |post|%>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
          </div>
          <%= link_to(simple_format(post.content), "/posts/#{post.id}") %>
          <div class="post-likes">
            <% if Like.find_by(user_id: @current_user.id, post_id: post.id) != nil %>
              <i class="fas fa-thumbs-up liked"></i>
              <% likes = Like.where(post_id: post.id) %>
              <% num_of_likes = likes.length %>
              <% if num_of_likes != 0 %>
                <%= num_of_likes %>
              <% end %>
            <% else %>
              <i class="fas fa-thumbs-up not-liked"></i>
              <% likes = Like.where(post_id: post.id) %>
              <% num_of_likes = likes.length %>
              <% if num_of_likes != 0 %>
                <%= num_of_likes %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
